<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PERMISSIONS -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Интернет для API запросов -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- ✅ ДОБАВЛЕНО: Биометрия (опционально) -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    
    <!-- ✅ ДОБАВЛЕНО: Нотификации для Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- APPLICATION -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <application
        android:name=".OpusIDEApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpusIDE"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="36">

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- MAIN ACTIVITY -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OpusIDE"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="colorMode|density|fontScale|keyboard|keyboardHidden|layoutDirection|locale|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|touchscreen|uiMode">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep Links (для будущего) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="opuside"
                    android:host="app" />
            </intent-filter>
            
        </activity>

    </application>

</manifest>