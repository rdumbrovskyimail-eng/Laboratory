<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ По умолчанию: только HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- ✅ Anthropic API - обязательно HTTPS -->
    <domain-config>
        <domain includeSubdomains="true">api.anthropic.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- ✅ GitHub API (если используешь) -->
    <domain-config>
        <domain includeSubdomains="true">api.github.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- ✅ Для локальной отладки (только в debug режиме) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>